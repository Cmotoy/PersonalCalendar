</head>
<body style="background-color: #666666" ; img src="~/images/bg-01.jpg">
    <form  asp-action="Calendar" method="Post">

        <div class="panel panel-default todo-panel">
            <div class="panel-heading">@ViewData["Title"]</div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>&#x2714;</td>
                        <td>List</td>
                        <td>Due</td>
                    </tr>
                </thead>
                @foreach (var List in Model.Lists ?? new Schedule<string>())
                 {
                    var Schedule = List.DueAt;
                    <tr>
                        <td>
                            <input type="checkbox" class="done-checkbox">
                        </td>
                        <td>@List.Title</td>
                        <td>@List.DueAt.Humanize()</td>
                    </tr>

                 }

            </table>

            <div class="panel-footer add-item-form">
            </div>
        </div>
    </form>


